package com.fleck.jersey.jaxb;

import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;

@Path("/jaxbExample")

public class jaxbExampleResource {
	
	// This method is called if XMLis request
    @GET
    @Produces( { MediaType.APPLICATION_XML, MediaType.APPLICATION_JSON })
    public Todo getXML() {
    	Todo jaxB = new Todo();
    	jaxB.setSummary("This is my first todo");
    	jaxB.setDescription("This is my first todo");
	    return jaxB;
    }

    // This can be used to test the integration with the browser
    @GET
    @Produces( { MediaType.TEXT_XML })
    public Todo getHTML() {
    	Todo jaxB = new Todo();
    	jaxB.setSummary("This is my first todo");
    	jaxB.setDescription("This is my first todo");
        return jaxB;
    }
}
//http://localhost:8080/com.fleck.jersey.jaxb/rest/jaxbExample